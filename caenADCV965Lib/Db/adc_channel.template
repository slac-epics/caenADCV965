        {
        field( DESC, "Beam Charge Circular Buffer")
        field( ASG,  "$(asg)")
        field( SCAN, "Passive")
        field( ALG,  "Circular Buffer")
        field( NSAM, "$(size)")
        field( INP,  "$(dev):$(area):$(location):QDCRAW.VAL")
        }
